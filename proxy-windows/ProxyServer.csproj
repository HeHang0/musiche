<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net6.0-windows;net472</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>logo.ico</ApplicationIcon>
    <Company>HeHang</Company>
    <Description>QuickQuick copy and paste</Description>
    <Copyright>Copyright ©  2024</Copyright>
    <PackageProjectUrl>https://github.com/HeHang0/Musiche</PackageProjectUrl>
    <RepositoryUrl>https://github.com/HeHang0/Musiche</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Product>ProxyServer</Product>
    <Authors>HeHang</Authors>
    <Version>1.0.0</Version>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <PackageIcon>logo.ico</PackageIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Costura.Fody" Version="5.7.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="PicaPico.ThemeListener" Version="1.0.1" />
    <PackageReference Include="WPF-UI" Version="3.0.5" />
    <PackageReference Include="WPF-UI.Tray" Version="3.0.5" />
  </ItemGroup>

</Project>
